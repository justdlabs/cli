{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"lib": ["esnext", "dom"],
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"declaration": true,
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "resources/**/**", "dist"]
}
